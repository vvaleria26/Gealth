<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nutricionapp.RecomendacionesActivity">

    <!-- Título de la página -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottomNavigationLayout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#C1D893"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <Button
            android:id="@+id/recommendationsButton"
            android:layout_width="69dp"
            android:layout_height="69dp"
            android:background="@android:color/transparent"
            android:paddingTop="12dp"
            app:icon="@drawable/recommendations_icon"
            app:iconGravity="textTop"
            app:iconSize="44dp"
            app:layout_constraintEnd_toStartOf="@id/settingsButton"
            app:layout_constraintStart_toEndOf="@id/diagnosticButton"
            tools:layout_editor_absoluteY="0dp" />

        <Button
            android:id="@+id/homeButton"
            android:layout_width="69dp"
            android:layout_height="69dp"
            android:background="@android:color/transparent"
            android:paddingTop="12dp"
            app:icon="@drawable/home_icon"
            app:iconGravity="textTop"
            app:iconSize="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/diagnosticButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/diagnosticButton"
            android:layout_width="69dp"
            android:layout_height="69dp"
            android:background="@android:color/transparent"
            android:paddingTop="12dp"
            app:icon="@drawable/diagnostico_icon"
            app:iconGravity="textTop"
            app:iconSize="30dp"
            app:layout_constraintEnd_toStartOf="@id/recommendationsButton"
            app:layout_constraintStart_toEndOf="@id/homeButton"
            tools:layout_editor_absoluteY="1dp" />

        <Button
            android:id="@+id/settingsButton"
            android:layout_width="69dp"
            android:layout_height="69dp"
            android:background="@android:color/transparent"
            android:paddingTop="12dp"
            app:icon="@drawable/settings_icon"
            app:iconGravity="textTop"
            app:iconSize="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/recommendationsButton"
            tools:layout_editor_absoluteY="0dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/recomendacionesTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recomendaciones de Salud"
        android:textSize="24sp"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Video de ejercicio -->
    <VideoView
        android:id="@+id/exerciseVideo"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/recomendacionesTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Recomendación de tomar agua -->

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/motivationalQuote"
        app:layout_constraintTop_toBottomOf="@+id/exerciseVideo"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="0dp">

        <Button
            android:id="@+id/forwardButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adelantar 5s" />

        <Button
            android:id="@+id/playPauseButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Play"
            app:icon="@drawable/playpause" />

        <Button
            android:id="@+id/rewindButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Retroceder 5s" />

    </LinearLayout>

    <TextView
        android:id="@+id/waterRecommendation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Toma al menos 8 vasos de agua al día."
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

    <!-- Frase motivacional -->
    <TextView
        android:id="@+id/motivationalQuote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¡Sigue adelante, cada paso cuenta!"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:textColor="@android:color/holo_blue_dark"
        app:layout_constraintTop_toBottomOf="@+id/waterRecommendation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Música recomendada -->
    <Button
        android:id="@+id/playMusicButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Escuchar Música Relajante"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/motivationalQuote"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Barra de navegación -->

</androidx.constraintlayout.widget.ConstraintLayout>
