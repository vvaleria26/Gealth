<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Botón de regreso -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottomNavigationLayout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#C1D893"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <Button
            android:id="@+id/recommendationsButton"
            android:layout_width="69dp"
            android:layout_height="69dp"
            android:background="@android:color/transparent"
            android:paddingTop="12dp"
            app:icon="@drawable/recommendations_icon"
            app:iconGravity="textTop"
            app:iconSize="44dp"
            app:layout_constraintEnd_toStartOf="@id/settingsButton"
            app:layout_constraintStart_toEndOf="@id/diagnosticButton"
            tools:layout_editor_absoluteY="0dp" />

        <Button
            android:id="@+id/homeButton"
            android:layout_width="69dp"
            android:layout_height="69dp"
            android:background="@android:color/transparent"
            android:paddingTop="12dp"
            app:icon="@drawable/home_icon"
            app:iconGravity="textTop"
            app:iconSize="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/diagnosticButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/diagnosticButton"
            android:layout_width="69dp"
            android:layout_height="69dp"
            android:background="@android:color/transparent"
            android:paddingTop="12dp"
            app:icon="@drawable/diagnostico_icon"
            app:iconGravity="textTop"
            app:iconSize="30dp"
            app:layout_constraintEnd_toStartOf="@id/recommendationsButton"
            app:layout_constraintStart_toEndOf="@id/homeButton"
            tools:layout_editor_absoluteY="1dp" />

        <Button
            android:id="@+id/settingsButton"
            android:layout_width="69dp"
            android:layout_height="69dp"
            android:background="@android:color/transparent"
            android:paddingTop="12dp"
            app:icon="@drawable/settings_icon"
            app:iconGravity="textTop"
            app:iconSize="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/recommendationsButton"
            tools:layout_editor_absoluteY="0dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Título de la página de configuración -->

    <!-- Opción para modificar el perfil -->

    <!-- Opción para activar/desactivar notificaciones -->

    <!-- Términos y condiciones -->

    <!-- Botón para eliminar cuenta -->

    <!-- Botón para cerrar sesión -->


    <!-- Botón Home -->

    <TextView
        android:id="@+id/settingsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="Configuración"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/profileTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:padding="16dp"
        android:text="Modificar Perfil"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/settingsTitle"
        tools:layout_editor_absoluteX="16dp" />

    <CheckBox
        android:id="@+id/notificationCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activar notificaciones"
        app:layout_constraintTop_toBottomOf="@+id/profileTextView"
        tools:layout_editor_absoluteX="7dp" />

    <TextView
        android:id="@+id/termsTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:padding="16dp"
        android:text="Términos y Condiciones"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/notificationCheckBox"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/deleteAccountButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Eliminar Cuenta"
        app:layout_constraintTop_toBottomOf="@+id/termsTextView"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Cerrar Sesión"
        app:layout_constraintTop_toBottomOf="@+id/deleteAccountButton"
        tools:layout_editor_absoluteX="16dp" />

    <!-- Botón Diagnóstico -->

</androidx.constraintlayout.widget.ConstraintLayout>
