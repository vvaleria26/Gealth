<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <!-- Título -->
    <TextView
        android:id="@+id/diagnosticTitleTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Resultado de Diagnóstico"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Parámetros ingresados -->
    <TextView
        android:id="@+id/parametersTitleTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Parámetros ingresados:"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/diagnosticTitleTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/parametersTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Edad: 25\nPeso: 70 kg\nAltura: 170 cm\nActividad: Moderada"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/parametersTitleTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Resultado -->
    <TextView
        android:id="@+id/resultTitleTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Resultado:"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/parametersTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Tu IMC indica que tienes un peso saludable."
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/resultTitleTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Recomendaciones -->
    <TextView
        android:id="@+id/recommendationsTitleTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Recomendaciones:"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/resultTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/recommendationsTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Consume una dieta equilibrada y realiza ejercicio moderado al menos 3 veces por semana."
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/recommendationsTitleTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Botón de cerrar -->
    <Button
        android:id="@+id/closeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cerrar"
        app:layout_constraintTop_toBottomOf="@id/recommendationsTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
